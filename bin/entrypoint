#!/bin/sh -e

# This is documented here:
# https://docs.openshift.com/container-platform/3.11/creating_images/guidelines.html#openshift-specific-guidelines

if ! whoami &>/dev/null; then
  if [ -w /etc/passwd ]; then
    echo "${USER_NAME:-coherence}:x:$(id -u):$(id -g):${USER_NAME:-coherence} user:${HOME}:/sbin/nologin" >> /etc/passwd
  fi
fi

ARGS="--watches-file=/opt/${USER_NAME:-coherence}/watches.yaml"


if [[ "${SSL_CERTS_DIR}" != "" ]]
then
    if [[ "${SSL_CERTS_DIR:${#SSL_CERTS_DIR}-1}" != "/" ]]
    then
        SSL_CERTS_DIR="${SSL_CERTS_DIR}/"
    fi
else
    SSL_CERTS_DIR=""
fi

if [[ "${SSL_KEY_FILE}" != "" ]]
then
    ARGS="${ARGS} --ssl-key-file=${SSL_CERTS_DIR}${SSL_KEY_FILE}"
fi
if [[ "${SSL_CERT_FILE}" != "" ]]
then
    ARGS="${ARGS} --ssl-cert-file=${SSL_CERTS_DIR}${SSL_CERT_FILE}"
fi
if [[ "${SSL_CA_FILE}" != "" ]]
then
    ARGS="${ARGS} --ssl-ca-file=${SSL_CERTS_DIR}${SSL_CA_FILE}"
fi


exec ${OPERATOR} run helm ${ARGS} $@
